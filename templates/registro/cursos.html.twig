        <h2 class="text-center mb-4">Cursos registrados</h2>

        <!-- Tabs navigation -->
        <ul class="nav nav-tabs" id="cursoTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="markov-tab" data-bs-toggle="tab" data-bs-target="#markov" type="button" role="tab">Markov</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="booleana-tab" data-bs-toggle="tab" data-bs-target="#booleana" type="button" role="tab">Booleana</button>
            </li>
            <li class="nav-item" role="presentation">
