        <h1 class="text-center mb-4">Cursos</h1>

        <!-- Bootstrap Tabs -->
        <ul class="nav nav-tabs mb-3" id="cursoTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="markov-tab" data-bs-toggle="tab" data-bs-target="#markov" type="button" role="tab">Procesos de Markov</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="booleana-tab" data-bs-toggle="tab" data-bs-target="#booleana" type="button" role="tab">Modelos Booleanos</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="inferencia-tab" data-bs-toggle="tab" data-bs-target="#inferencia" type="button" role="tab">Inferencia Bayesiana</button>
