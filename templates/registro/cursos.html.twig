                <button class="nav-link" id="clustering-tab" data-bs-toggle="tab" data-bs-target="#clustering" type="button" role="tab">Clustering</button>
            </li>
        </ul>

        <!-- Tabs content -->
        <div class="tab-content mt-3" id="cursoTabsContent">

            {# --- MARKOV --- #}
            <div class="tab-pane fade show active" id="markov" role="tabpanel">
                <h4 class="mb-3 text-center">Procesos de Markov a tiempo continuo</h4>
                <table class="table table-striped table-hover table-bordered align-middle">
                    <thead class="table-dark">
                    <tr>
                        <th>#</th><th>Nombre</th><th>Carrera</th><th>Semestre</th>
                        <th>Porcentaje</th><th>Procedencia</th><th>Correo</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set counter = 0 %}
                    {% for registro in registros if registro.curso1 == 'Markov' %}
                        {% set counter = counter + 1 %}
                        <tr>
                            <td>{{ counter }}</td>
                            <td>{{ registro.nombre }} {{ registro.paterno }} {{ registro.materno }}</td>
                            <td>{{ registro.carrera }}</td>
                            <td>{{ registro.semestre }}</td>
                            <td>{{ registro.porcentaje }}</td>
                            <td>{{ registro.procedencia }}</td>
                            <td>{{ registro.mail }}</td>
                        </tr>
                    {% else %}
                        <tr><td colspan="7" class="text-center text-muted">No hay registros</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

