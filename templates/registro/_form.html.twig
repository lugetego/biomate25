        <script>
            function setMaxLength(id, max) {
                document.getElementById(id).maxLength = max;
            }

            function attachCounter(inputId, counterId, maxLength) {
                const inputEle = document.getElementById(inputId);
                const counterEle = document.getElementById(counterId);

                ["click", "input"].forEach((event) => {
                    inputEle.addEventListener(event, function (e) {
                        const currentLength = e.target.value.length;
                        counterEle.innerHTML = `${currentLength}/${maxLength}`;

                        if (currentLength < 300) {
                            counterEle.style.color = "red";
                        } else if (currentLength >= 300 && currentLength <= maxLength) {
                            counterEle.style.color = "green";
                        } else {
                            counterEle.style.color = "black";
                        }
                    });
                });
            }

            // Apply to your fields
            setMaxLength("registro_razones", 2000);
            attachCounter("registro_razones", "counter", 2000);

