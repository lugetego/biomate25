            {% endif %}
        {% endfor %}

        {% set pybasico = 0 %}
        {% set pyno = 0 %}
        {% set pyinter = 0 %}
        {% set pyavanza = 0 %}

        {% for registro in registros %}
            {% if registro.python == 'Básico' %}
                {% set pybasico = pybasico + 1 %}
            {% elseif registro.python == 'No' %}
