{% endblock %}
{% block body %}

    {% if is_granted('ROLE_ADMIN') %}

        {% set hombres = 0 %}
        {% set mujeres = 0 %}
        {% set recomendados = 0 %}
        {% set alimentacion = 0 %}
        {% set hospedaje = 0 %}
        {% set sinbeca = 0 %}
        {% set hospyalim = 0 %}
        {% set transporte = 0 %}
        {% set aceptados = 0 %}
        {% set noaceptados = 0 %}
        {% set confirmados = 0 %}

        {% set edobasico = 0 %}
        {% set edono = 0 %}
        {% set edointer = 0 %}
        {% set edoavanza = 0 %}

        {% for registro in registros %}
            {% if registro.edo == 'Básico' %}
                {% set edobasico = edobasico + 1 %}
            {% elseif registro.edo == 'No' %}
                {% set edono = edono + 1 %}
            {% elseif registro.edo == 'Intermedio' %}
                {% set edointer = edointer + 1 %}
            {% elseif registro.edo == 'Avanzado' %}
